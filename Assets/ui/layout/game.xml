<?xml version="1.0" encoding="utf-8" ?>

<box width="100%" height="100%" style="visible: true; backgroundImage:'assets/ui/background.png';">

    <box x="0" y="0" width="600" height="700" horizontalAlign="center"
         id="hud">

        <box width="100%" height="100%" verticalAlign="top" horizontalAlign="left"
             style="paddingRight: 50; paddingTop: 0;" >
            <vbox width="100%" height="100%"
                    style='padding: 8; paddingTop: 0; paddingRight: 20' >
                <hbox>
                    <text id="score" style="fontSize: 20; fontBold: true; color: #FFFFFF;" verticalAlign="top" />
                    <text id="balls-remaining" style="fontSize: 20; color: #FFFFFF; alpha: 0.7;" verticalAlign="top"/>
                </hbox>
                <vbox>
                    <text id="fps" style="fontSize: 20; fontBold: true; color: #FFFFFF;" />
                    <text id="total-memory" style="fontSize: 22; color: #FFFFFF; alpha: 0.7;"  verticalAlign="bottom"/>
                </vbox>
                <hbox id="board">
                </hbox>
            </vbox>

        </box>

    </box>

</box>